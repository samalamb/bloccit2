<% buser.favorites.each do |fav| %>
  <div>
    <% avatar_url = fav.post.user.avatar_url(48) %>
    <% if avatar_url %>
      <div class="media-left">
        <%= image_tag avatar_url, class: 'media-object' %>
      </div>
    <% end %>
    <div class="media-body">
      <small>
        <p>Created by: <%= fav.post.user.name %></p>
        <p>Favorite Title: <%= fav.post.title %></p>
        <%= pluralize(fav.post.up_votes, 'Up Votes') %>,
        <%= pluralize(fav.post.down_votes, 'Down Votes') %>
      </small>
    </div>
    <br />
  </div>
<% end %>
